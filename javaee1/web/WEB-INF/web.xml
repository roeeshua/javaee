<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>servlet.JoinClassServlet</servlet-name>
        <servlet-class>servlet.JoinClassServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>servlet.JoinClassServlet</servlet-name>
        <url-pattern>/teacher/join-class</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>servlet.AuditUserServlet</servlet-name>
        <servlet-class>servlet.AuditUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>servlet.AuditUserServlet</servlet-name>
        <url-pattern>/teacher/audit-user</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>servlet.ClassNotifyServlet</servlet-name>
        <servlet-class>servlet.ClassNotifyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>servlet.ClassNotifyServlet</servlet-name>
        <url-pattern>/teacher/post-notice</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>servlet.delClassNotifyServlet</servlet-name>
        <servlet-class>servlet.delClassNotifyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>servlet.delClassNotifyServlet</servlet-name>
        <url-pattern>/teacher/delete-notice</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>servlet.PJoinClassServlet</servlet-name>
        <servlet-class>servlet.PJoinClassServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>servlet.PJoinClassServlet</servlet-name>
        <url-pattern>/parent/pjoin-class</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>servlet.PAuditUserServlet</servlet-name>
        <servlet-class>servlet.PAuditUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>servlet.PAuditUserServlet</servlet-name>
        <url-pattern>/teacher/audit-parent</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>servlet.SystemNotifyServlet</servlet-name>
        <servlet-class>servlet.SystemNotifyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>servlet.SystemNotifyServlet</servlet-name>
        <url-pattern>/teacher/post-system-notice</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>servlet.delSystemNotifyServlet</servlet-name>
        <servlet-class>servlet.delSystemNotifyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>servlet.delSystemNotifyServlet</servlet-name>
        <url-pattern>/teacher/del-system-notice</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>servlet.WatchClassNotifyServlet</servlet-name>
        <servlet-class>servlet.WatchClassNotifyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>servlet.WatchClassNotifyServlet</servlet-name>
        <url-pattern>/parent/watch-class-notice</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>servlet.SendToTeacherServlet</servlet-name>
        <servlet-class>servlet.SendToTeacherServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>servlet.SendToTeacherServlet</servlet-name>
        <url-pattern>/parent/sendtoteacher</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>servlet.SendToParentServlet</servlet-name>
        <servlet-class>servlet.SendToParentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>servlet.SendToParentServlet</servlet-name>
        <url-pattern>/teacher/sendtoparent</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>servlet.ReceiveFromPOTServlet</servlet-name>
        <servlet-class>servlet.ReceiveFromPOTServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>servlet.ReceiveFromPOTServlet</servlet-name>
        <url-pattern>/teacher/viewmessages</url-pattern>
    </servlet-mapping>
</web-app>
